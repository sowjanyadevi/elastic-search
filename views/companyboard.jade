extends layout

block content
    .page.js-page
      // One Page Sidebar
      .one-page-sidebar
        // One Page Sidebar Header
        .one-page-sidebar-header
          // One Page Logo
          .one-page-logo
            // Logo Image
            a.logo-image(href='/hr_managers')
              img(src='/images/logo2.png')
            br
            a.logo-image(href='/hr_managers')
              img(src='/images/manager.png')
            // End of Logo Image
          // End of One Page Logo
          // One Page Meta
          // End of One Page Meta
        // End of One Page Sidebar Header
        // One Page Nav
        .one-page-nav-wrapper.js-custom-scrollbar.responsive
          ul.one-page-nav.js-one-page-nav(data-prepend-to='.js-prepend-mobile-menu')
            li.is-active
              a(href='#domain')
                span.one-page-nav-icon
                  i.fa.fa-globe
                | Company Branding Domain
            li
              a(href='#logo')
                span.one-page-nav-icon
                  i.fa.fa-fire
                | Logo
        // End of One Page Nav
        // One Page Sidebar Footer
        footer.one-page-sidebar-footer
          | All Rights Reserved.
          a(href='http://www.masymbol.com/', target='_blank') Masymbol Technologies
          |  Pvt Ltd Â© 2016
        // End of One Page Sidebar Footer
      // End of One Page Sidebar
      // One Page Content
      .one-page-content
        // Header
        header.header.large.header-one-page.js-header-fixed
          .container-fluid.container-spaced
            .row
              .col-md-3.col-sm-6.col-xs-5
                .visible-sm-block.visible-xs-block
                  // Logo Image
                  a.logo-image(href='/')
                    img.img-responsive(src='https://s3.amazonaws.com/skilledtree-public/logo.png', alt='logo')
                  // End of Logo Image
              .col-md-9.col-sm-6.col-xs-7
                // Menu
                nav.right.helper
                  ul.menu.sf-menu.js-menu
                    li
                      a(href='/hr_managers')
                        i.fa.fa-home.fa-lg
                    li
                      a(href='/hr_managers/introduction')
                        | Introduction
                    li
                      a(href='/hr_managers/team') Team
                    li
                      a(href='#') Members
                      ul
                        li
                          a(href='/hr_managers/employees') Employees
                        li
                          a(href='/hr_managers/recruiter') Recruiter
                        li
                          a(href='/hr_managers/manager') Manager
                    li
                      a(href='#') Jobs
                      ul
                        li
                          a(href='/hr_managers/Jobs') Jobs
                        li
                          a(href='/hr_managers/resumes') Resumes
                    li
                      a(href='/hr_managers/gamification') Gamification
                    li
                      a(href='/hr_managers/reports') Reports
                    li
                      a.active(href='#') Branding
                      ul
                        li
                          a(href='/hr_managers/career') Career Page
                        li
                          a.active(href='/hr_managers/companybrand') Company Branding
                    li
                      a(href='/hr_managers/dashboard') Dashboard
                    li
                      a(href='#') Header
                      ul
                        li
                          a(href='/hr_managers/header') Header Icons
                        li
                          a(href='/hr_managers/settings') Settings
                // End of Menu
        // End of Header
        #content
          .container-fluid.container-spaced
            .col-md-12
              #domain.category-info.helper.pt0
                br
                h1
                  | Company Branding Domain
                p.category-content
                  | If your company needs a unique domain, you can request for a domain here. You can login to SkilledTree with your customized URL.
            .row
              .col-md-8
                img(src='/images/domain1.png', width='100%')
            br
            br
            .row
              .col-md-8
                img(src='/images/domain2.png', width='100%')
            br
            br
            .row
              .col-md-8
                img(src='/images/domain3.png', width='100%')
            br
            br
            .col-md-12
              #logo.category-info.helper.pt0
                br
                h1
                  | Logo
                p.category-content
                  | You can replace SkilledTree logo with your company logo. To do that, go to Company Profile page and change your company logo. All your employees, recruiters and managers can see the new uploaded logo.
            .row
              .col-md-8
                img(src='/images/logo.png', width='100%')
            br
            br
